{
  "dataset_reader": {
    "name": "basic_classification_reader",
    "x": "FullText",
    "y": "Label",
    "data_path": "./YahooAnswers/yahoo_answers_data/",
    "train": "train.csv",
    "valid": "valid.csv",
    "test": "test.csv"
  },
  "dataset_iterator": {
    "name": "basic_classification_iterator",
    "seed": 42
  },
  "chainer": {
    "in": [
      "x"
    ],
    "in_y": [
      "y"
    ],
    "pipe": [
      {
        "id": "classes_vocab",
        "name": "simple_vocab",
        "fit_on": [
          "y"
        ],
        "save_path": "YahooAnswers/models/model_v11/yahoo_answers_classes.dict",
        "load_path": "YahooAnswers/models/model_v11/yahoo_answers_classes.dict",
        "in": "y",
        "out": "y_ids"
      },
      {
        "in": [
          "x"
        ],
        "out": [
          "x_prep"
        ],
        "name": "dirty_comments_preprocessor",
        "remove_punctuation": false
      },
      {
        "in": "x_prep",
        "out": "x_tok",
        "id": "my_tokenizer",
        "name": "nltk_moses_tokenizer"
      },
      {
        "in": [
          "x_tok"
        ],
        "out": [
          "x_emb"
        ],
        "id": "my_embedder",
        "name": "fasttext",
        "load_path": "/home/dilyara.baymurzina/embeddings/ft_yahoo_questions_answers_300.bin",
        "dim": 300
      },
      {
        "in": "y_ids",
        "out": "y_onehot",
        "name": "one_hotter",
        "id": "my_one_hotter",
        "depth": "#classes_vocab.len"
      },
      {
        "in": [
          "x_emb"
        ],
        "in_y": [
          "y_onehot"
        ],
        "out": [
          "y_pred_probas"
        ],
        "main": true,
        "name": "keras_classification_model",
        "save_path": "YahooAnswers/models/model_v11/model",
        "load_path": "YahooAnswers/models/model_v11/model",
        "embedding_size": "#my_embedder.dim",
        "n_classes": "#classes_vocab.len",
        "units_gru": 256,
        "optimizer": "Adam",
        "lear_rate": 0.001,
        "lear_rate_decay": 0.001,
        "loss": "categorical_crossentropy",
        "text_size": 100,
        "coef_reg_lstm": 1e-5,
        "coef_reg_den": 1e-5,
        "dropout_rate": 0.5,
        "rec_dropout_rate": 0.5,
        "dense_size": 100,
        "model_name": "gru_with_masking_model",
        "last_layer_activation": "softmax",
        "restore_lr": false
      },
      {
        "in": "y_pred_probas",
        "out": "y_pred_ids",
        "name": "proba2labels",
        "max_proba": true
      },
      {
        "in": "y_pred_ids",
        "out": "y_pred_labels",
        "ref": "classes_vocab"
      },
      {
        "ref": "my_one_hotter",
        "in": "y_pred_ids",
        "out": "y_pred_onehot"
      }
    ],
    "out": [
      "y_pred_probas"
    ]
  },
  "train": {
    "epochs": 20,
    "batch_size": 64,
    "metrics": [
      {
        "name": "roc_auc",
        "inputs": [
          "y_onehot",
          "y_pred_probas"
        ]
      },
      {
        "name": "sets_accuracy",
        "inputs": [
          "y",
          "y_pred_labels"
        ]
      },
      {
        "name": "f1_macro",
        "inputs": [
          "y",
          "y_pred_labels"
        ]
      }
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "show_examples": false,
    "validate_best": true,
    "test_best": true,
    "tensorboard_log_dir": "YahooAnswers/models/model_v11/"
  },
  "metadata": {
    "requirements": [
      "../dp_requirements/tf.txt",
      "../dp_requirements/fasttext.txt"
    ],
    "labels": {
      "telegram_utils": "IntentModel",
      "server_utils": "KerasIntentModel"
    },
    "download": [
      "http://files.deeppavlov.ai/deeppavlov_data/YahooAnswers.tar.gz"
    ]
  }
}
